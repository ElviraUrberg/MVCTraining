@model FieldSurvey

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Redigera Objekt</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Service"></label>
            <select asp-for="Service" class="form-select mb-3" aria-label="Välj tjänst">
                <option selected disabled>Välj tjänst</option>
                <option>Felanmälan</option>
                <option>Besiktning</option>
                <option>Demo</option>
            </select>
            <span asp-validation-for="Service" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Area"></label>
            <select asp-for="Area" class="form-select mb-3" aria-label="Välj område">
                <option selected disabled>Välj område</option>
                <option>Norrköping</option>
                <option>Söderköping</option>
                <option>Linköping</option>
            </select>
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-select mb-3" aria-label="Välj typ">
                <option selected disabled>Välj typ</option>
                <option>Skadat räcke</option>
                <option>Ojämn väg</option>
                <option>Saknad skylt</option>
                <option>Dålig vägmarkering</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-select mb-3" aria-label="Välj status">
                <option selected disabled>Välj status</option>
                <option>Ladda upp som ny</option>
                <option>Ladda upp som publicerad</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>        
        <div class="mb-3">
            <label asp-for="Photopath"></label>
            <input asp-for="Photopath" class="form-control" />
            <span asp-validation-for="Photopath" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Latitude"></label>
            <input asp-for="Latitude" class="form-control"/>
            <span asp-validation-for="Latitude" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Longitude"></label>
            <input asp-for="Longitude" class="form-control"/>
            <span asp-validation-for="Longitude" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="FieldSurvey" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Avbryt
        </a>
    </div>
</form>

